{
  "name": "@wso2-ei/low-code-diagram",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typings": "lib/index",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prebuild": "pnpm run lint",
    "build": "pnpm run clean && tsc --pretty && pnpm run copy:assets",
    "copy:assets": "copyfiles -u 1 \"src/**/*.scss\" \"src/**/*.svg\" \"src/**/*.css\" \"src/**/*.png\" \"src/**/*.txt\" \"src/**/*.json\" lib/",
    "watch": "tsc --pretty --watch",
    "clean": "rimraf build/ && rimraf lib/",
    "clean:nm": "rimraf node_modules",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "Sajinie",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "husky": "^8.0.3",
    "size-limit": "^8.2.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.3",
    "react": "^17.0.2",
    "@types/react": "^17.0.37",
    "@types/react-dom": "17.0.14",
    "@wso2-ei/syntax-tree": "workspace:*",
    "react-scripts": "^5.0.1",
    "vscode": "^1.1.29",
    "@types/vscode-webview": "^1.57.0",
    "vscode-languageclient": "^8.0.2",
    "copyfiles": "^2.4.1",
    "tslint": "^6.1.3",
    "tslint-react": "^4.2.0",
    "tslint-react-hooks": "^2.2.2",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "@wso2-ei/syntax-tree": "workspace:*",
    "@types/react": "^17.0.37",
    "jest": "^29.4.2",
    "@types/vscode": "^1.73.0"
  }
}
